{
  "name": "@rdey/packages",
  "version": "0.0.0-development.0",
  "private": true,
  "workspaces": [
    "components",
    "design",
    "query-string",
    "docs"
  ],
  "directories": {
    "doc": "docs/dist"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "export": "yarn run --cwd=./docs build-storybook",
