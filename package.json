    "url": "https://github.com/rdey/rdey-packages/issues"
  },
  "homepage": "https://github.com/rdey/rdey-packages#readme",
  "devDependencies": {
    "npm-run-all": "^4.1.5",
    "prettier": "^1.15.3",
    "@rdey/components": "file:./components",
    "@rdey/design": "file:./design"
  }
}
