{
  "name": "@rdey/packages",
  "version": "0.0.0-development.0",
  "directories": {
    "doc": "docs/dist"
  },
  "private": true,
  "workspaces": [
    "components",
    "design",
    "query-string",
    "docs"
  ],
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "export": "yarn run build-storybook",
    "build-storybook": "yarn run --cwd=./docs build-storybook",
    "start": "yarn run --cwd=./docs start",
    "bump:components": "npm --prefix ./components version patch",
    "bump:design": "npm --prefix ./design version patch",
    "publish:components": "cd ./components && npm publish",
    "publish:design": "cd ./design && npm publish",
    "prepareForPublish": "./linkForDev.sh && run-p bump:*",
    "commit": "git-cz",
    "ci:publish": "node ci/publish.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rdey/rdey-packages.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/rdey/rdey-packages/issues"
  },
  "homepage": "https://github.com/rdey/rdey-packages#readme",
  "devDependencies": {
    "@babel/core": "^7.2.0",
    "@babel/plugin-proposal-class-properties": "^7.2.1",
    "@babel/plugin-proposal-export-default-from": "^7.2.0",
    "@babel/preset-env": "^7.2.0",
    "@babel/preset-react": "^7.0.0",
    "babel-eslint": "^10.0.1",
    "babel-plugin-styled-components": "^1.9.3",
    "commitizen": "^3.0.5",
    "cz-conventional-changelog": "2.1.0",
    "eslint": "^5.10.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jsx-a11y": "^6.1.2",
    "eslint-plugin-react": "^7.11.1",
    "execa": "^1.0.0",
    "minimist": "^1.2.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.15.3",
    "react-dom": "^16.6.3",
    "rollup": "^1.1.2",
    "rollup-external-modules": "^2.0.0",
    "rollup-plugin-babel": "^4.3.2",
    "rollup-plugin-local-resolve": "^1.0.7"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "dependencies": {}
}
